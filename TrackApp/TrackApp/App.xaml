<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="CircleButtonStart" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#373f51"/>
                <Setter Property="TextColor" Value="#373f51"/>
                <Setter Property="WidthRequest" Value="60"/>
                <Setter Property="HeightRequest" Value="60"/>
                <Setter Property="CornerRadius" Value="30"/>
            </Style>
            <Style x:Key="CircleButtonReset" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#9b2b2b"/>
                <Setter Property="TextColor" Value="#9b2b2b"/>
                <Setter Property="IsVisible" Value="False"/>
                <Setter Property="WidthRequest" Value="60"/>
                <Setter Property="HeightRequest" Value="60"/>
                <Setter Property="CornerRadius" Value="30"/>
            </Style>
            <Style x:Key="SplitField" TargetType="Label">
                <Setter Property="IsVisible" Value="False"/>
                <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>