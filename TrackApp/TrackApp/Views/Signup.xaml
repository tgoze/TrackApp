    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="30">
                <!---Email-->
                <inputLayout:SfTextInputLayout
                Hint="Email"
                HelperText="School email recommended"
                ContainerType="Outlined"
                >
                    <Entry 
                Keyboard="Email" 
                IsSpellCheckEnabled="False" 
                Text="{Binding Email}"
                x:Name="EmailEntry" />
                    </inputLayout:SfTextInputLayout >
                        <Label x:Name="EmailError" TextColor="Red" Text="{Binding EmailError}"/>


                <!---Password-->
                <inputLayout:SfTextInputLayout
                Hint="Password"
                HelperText="Enter Your Password"
                ContainerType="Outlined"
                EnablePasswordVisibilityToggle="True"
                >
                <Entry 
                IsSpellCheckEnabled="False" 
                IsTextPredictionEnabled="False" 
                IsPassword="True"    
                Text="{Binding Password}"
                x:Name="PasswordEntry" />
                </inputLayout:SfTextInputLayout>
                <Label x:Name="PasswordError" TextColor="Red" Text="{Binding PasswordError}"/>

                <inputLayout:SfTextInputLayout
                Hint="Confirm Password"
                HelperText="Confirm Your Password"
                ContainerType="Outlined"
                EnablePasswordVisibilityToggle="True"
                >
                    <Entry 
                IsSpellCheckEnabled="False" 
                IsTextPredictionEnabled="False" 
                IsPassword="True"
                Text="{Binding ConfirmPassword}"
                x:Name="ConfirmPasswordEntry" />
                    </inputLayout:SfTextInputLayout>
                <Label x:Name="ConfirmPasswordError" TextColor="Red" Text="{Binding ConfirmPasswordError}"/>

                <inputLayout:SfTextInputLayout
                Hint="First Name"
                HelperText="Enter Your First Name"
                ContainerType="Outlined"
                >
                <Entry
                Text="{Binding FirstName}"
                x:Name="FirstNameEntry" />
                </inputLayout:SfTextInputLayout>
                <Label x:Name="FirstNameError" TextColor="Red" Text="{Binding FirstNameError}"/>

                <inputLayout:SfTextInputLayout
                Hint="Last Name"
                HelperText="Enter Your Last Name"
                ContainerType="Outlined"
                >
                <Entry   
                Text="{Binding LastName}"
                x:Name="LastNameEntry" />
                </inputLayout:SfTextInputLayout>
                <Label x:Name="LastNameError" TextColor="Red" Text="{Binding LastNameError}" />
                
                
                <!--
                <picker:SfPicker VerticalOptions="Center" HorizontalOptions="Center" HeaderText="Color" WidthRequest="200" HeightRequest="200">
                    <picker:SfPicker.ItemsSource>
                        <ListCollection:List x:TypeArguments="x:String">
