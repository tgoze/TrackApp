                <inputLayout:SfTextInputLayout
                Hint="Height"
                HelperText="Enter Your Height"
                ContainerType="Outlined"
                >
                    <syncmaskededit:SfMaskedEdit x:Name="HeightMaskedEdit" Mask="0'00&quot;" />
                </inputLayout:SfTextInputLayout>
             
                <Label  x:Name="HeightError" TextColor="Red" Text="" />

                <inputLayout:SfTextInputLayout
                Hint="Weight"
                HelperText="Enter Your Weight(pounds)"
                ContainerType="Outlined"
                > 
                <Entry   
                Keyboard="Numeric"
                Text="{Binding Weight}"
                x:Name="WeightEntry" />
                </inputLayout:SfTextInputLayout>
                <Label  x:Name="WeightError" TextColor="Red" Text="{Binding WeightError}" />

                <Label Text="Grade Level" />
                <Picker x:Name="gradeLevel" Title="Select your Grade Level">
                    <Picker.ItemsSource >
                        <ListCollection:List x:TypeArguments="x:String">
                            <x:String>Freshman</x:String>
                            <x:String>Sophmore</x:String>
                            <x:String>Junior</x:String>
                            <x:String>Senior</x:String>
                        </ListCollection:List>
                    </Picker.ItemsSource>
                </Picker>
                <Label  x:Name="GradeLevelError" TextColor="Red" Text="" />





                <Button 
                    Command="{Binding SignupCommand}"
                    TextColor="White"
                    Text="Signup"      
                    CornerRadius="30" 
                    Margin="5,0,5,20"
                    BackgroundColor="#0000ff"/>
                <!--<Button Text="Next" Clicked="NextSignupAsync"/>-->


            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>