<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackApp.History">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="HistoryLv" ItemsSource="{Binding Runs}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Label Text="Runner number: " Grid.Column="0" Grid.Row="0"></Label>
                                <Label Text="{Binding RunnerNumber}" Grid.Column="1" Grid.Row="0"></Label>
                                <Label Text="Total time: " Grid.Column="2" Grid.Row="0"></Label>
                                <Label Text="{Binding TotalTime}" Grid.Column="3" Grid.Row="0"></Label>
                                <Label Text="Split times: " Grid.Column="0" Grid.Row="1"></Label>
                                <ListView x:Name="Splits" ItemsSource="{Binding Splits}" Grid.Column="1" Grid.Row="1">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                                <Grid>
                                                    <Label Text="{Binding .}" Grid.Column="0"></Label>
                                                </Grid>
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>